Bootstrap: localimage
From: opencv.img

%files
    ../src fibsem-optflow

%labels
    Maintainer Matthew Nichols
    Version v0.2.0
    
%post
     ldconfig
     cd /fibsem-optflow
     g++ -ggdb *.cpp -o optflow \
      `pkg-config --cflags --libs opencv` -lgsl -lblas -lpng \
      -ljsoncpp -lboost_iostreams -lcurl -std=c++11

%runscript
     exec /fibsem-optflow/optflow "$@"
